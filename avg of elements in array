#include <iostream>

using namespace std;

int main()
{
    int a[10],i;
    int n;
    float avg,sum=0.0;
    cout<<"enter size of array"<<endl;
    cin>>n;
    for(i=0;i<n;i++)
    {
        cin>>a[i];
        sum=sum+a[i];
    }
    avg=(sum/n);
    cout<<"average"<<avg;

    return 0;
}
